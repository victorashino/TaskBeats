<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskBeats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_300</item>
        <item name="colorPrimaryVariant">@color/pink_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_700</item>
        <item name="colorSecondaryVariant">@color/brown_900</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Title3" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/brown_900</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body1" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/brown_900</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="ButtomPrimary" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/brown_900</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Fab" parent="Widget.Design.FloatingActionButton">
        <item name="tint">@color/brown_900</item>
        <item name="backgroundTint">@color/pink_300</item>
    </style>
</resources>